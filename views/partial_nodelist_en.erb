<h3>List of sensors</h3>
<br />
<ul>
  <% site_list.each do |site_name| %>
  <li><a href="/en/map/<%= site_name %>"><%= site_name %></a>&nbsp;&nbsp;<i class="fa fa-map-marker"></i></li>

    <% if site_name == site %>
    <ul>
      <% node_list.each do |node_id, node_alias| %>
        <li><a href="/en/node/<%= site_name %>/<%= node_id %>" class="node_link"><%= node_alias %></a>&nbsp;&nbsp;<i class="fa fa-line-chart"></i></li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
</ul>
